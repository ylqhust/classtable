<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/classtable_dialog_message_rela_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/classtable_dialog_transparent_background">
    <LinearLayout
        android:id="@+id/classtable_dialog_message_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/select_class_week_dialog_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/classtable_dialog_message_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="title" />
        <TextView
            android:id="@+id/classtable_dialog_message_text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:text="message"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/classtable_select_class_dialog_divide_line_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/classtable_dialog_message_text_nav"
                style="@style/classtable_dialog_message_text_style"
                android:background="@drawable/select_week_dialog_left_button_selector"
                android:text="@string/classtable_cancle"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/classtable_select_class_dialog_divide_line_color"/>
            <TextView
                android:id="@+id/classtable_dialog_message_text_positive"
                style="@style/classtable_dialog_message_text_style"
                android:background="@drawable/select_week_dialog_right_button_selector"
                android:text="@string/classtable_ok"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

