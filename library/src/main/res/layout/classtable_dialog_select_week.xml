<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/classtable_dialog_select_week_linear"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/classtable_class_page_toolbar_height">

    <android.support.v7.widget.CardView
        android:id="@+id/classtable_dialog_select_week_cardview"
        android:layout_width="@dimen/classtable_dialog_select_week_listview_width"
        android:layout_height="@dimen/classtable_dialog_select_week_listview_height"
        android:layout_gravity="center"
        card_view:cardElevation="10dp">
            <ListView
                android:id="@+id/classtable_dialog_select_week_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:layout_centerHorizontal="true"/>
    </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>