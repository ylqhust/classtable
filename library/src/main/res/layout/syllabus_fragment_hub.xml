<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_f4f4f4"
              android:orientation="vertical">

    <View
        android:id="@+id/simulate_statusbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/green_00cd90"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/classtable_theme_color">

        <LinearLayout
            android:id="@+id/syllabus_fragment_hub_top_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_normal_null_pressed_solid_44_000000"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/classtable_arrows_left"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/HUBLogin"
            android:textColor="@color/gray_ffffff"
            android:textSize="20sp"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/syllabus_fragment_hub_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:progress="0"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/syllabus_fragment_hub_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/corner_5dp_solid_ffffff_stroke_c9c9c9"
            android:cursorVisible="true"
            android:gravity="center"
            android:hint="请输入学号"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textColor="@color/gray_565656"
            android:textColorHint="@color/gray_b5b5b5"
            android:textCursorDrawable="@null"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/syllabus_fragment_hub_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/corner_5dp_solid_ffffff_stroke_c9c9c9"
            android:cursorVisible="true"
            android:gravity="center"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textColor="@color/gray_565656"
            android:textColorHint="@color/gray_b5b5b5"
            android:textCursorDrawable="@null"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/syllabus_fragment_hub_login"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:background="@drawable/selector_common_corner_5dp_normal_solid_00cd90_pressed_solid_009f5c"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="@string/classtable_login"
                android:textColor="@color/gray_ffffff"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/syllabus_fragment_hub_loaded_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="8dp"
                android:text="连接hub成功"
                android:textColor="@color/gray_929292"
                android:textSize="12sp"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/syllabus_fragment_hub_loading_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="16dp"
        android:text="如果连接到hub系统慢，可能您当前网络的速度波动\n重新进入该页面刷新后，可能会解决问题"
        android:textColor="@color/gray_929292"
        android:textSize="12sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp">
            <ImageView
                android:layout_width="216dp"
                android:layout_height="40dp"
                android:src="@mipmap/classtable_login_page_bottom"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="我们将确保你的账号安全"
                android:textSize="12sp"
                android:textColor="@color/classtable_theme_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="请放心使用"
                android:textSize="12sp"
                android:textColor="@color/classtable_theme_color"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>