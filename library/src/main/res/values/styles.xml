<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ccc_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ccc_view_height</item>
        <item name="android:background">@color/ccc_view_color</item>
        <item name="android:layout_marginTop">@dimen/classtable_unit_height</item>
    </style>

    <style name="left_time_top_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/left_time_top_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="left_time_bottom_text_style" parent="left_time_top_text_style">
        <item name="android:textColor">#949494</item>
    </style>

    <style name="left_time_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/left_time_view_color</item>
    </style>

    <style name="left_time_linear_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/classtable_unitHeight</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="classtable_classes_container_pm_view1_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/classtable_unitHeight</item>
    </style>

    <style name="classtable_classes_container_pm_view2_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ccc_view_color</item>
    </style>
    <style name="day_week_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="day_week_linear_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="add_button_page_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/add_button_page_text_selector</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="add_class_page_edittext_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="classtable_select_class_dialog_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/classtable_select_class_dialog_text_color</item>
        <item name="android:background">@drawable/select_week_dialog_left_button_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="classtable_class_detail_information_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/class_detail_information_text</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="classtable_dialog_message_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@color/classtable_select_class_dialog_text_color</item>
        <item name="android:background">@drawable/select_week_dialog_left_button_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
